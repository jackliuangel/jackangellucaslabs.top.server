# GRNR 子域名配置
# grnr.jackangellucaslabs.top

# HTTP Server - 仅保留 80 端口用于验证和跳转
server {
    listen 80;
    listen [::]:80;
    server_name grnr.jackangellucaslabs.top;

    # Certbot 验证通道
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # 暂时不要在这里写强制跳转，让 Certbot 来处理
    location / {
        root /var/www/html/grnr-root;
        index index.html;
        try_files $uri $uri/ /index.html;
    }
}
