# grnr subdomain configuration
# grnr.jackangellucaslabs.top

# HTTP â†’ HTTPS redirection
server {
    listen 80;
    listen [::]:80;
    server_name grnr.jackangellucaslabs.top;

    # Certbot challenge location
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect all other HTTP traffic to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS Server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    
    server_name grnr.jackangellucaslabs.top;
    
    # SSL Configuration (Will be updated by Certbot)
    # If this is the first time, you might need to comment these out or use temporary paths
    # ssl_certificate /etc/letsencrypt/live/grnr.jackangellucaslabs.top/fullchain.pem; 
    # ssl_certificate_key /etc/letsencrypt/live/grnr.jackangellucaslabs.top/privkey.pem; 
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    # Website Root
    root /var/www/html/grnr-root;
    index index.html;
    
    # SPA routing support
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Static assets caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|otf)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Access-Control-Allow-Origin *;
        access_log off;
    }
    
    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    
    # Gzip
    gzip on;
    gzip_vary on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    
    # Logging
    access_log /var/log/nginx/grnr-subdomain-access.log;
    error_log /var/log/nginx/grnr-subdomain-error.log;
}
